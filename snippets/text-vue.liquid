{%- liquid
  assign block_settings = block.settings
  assign plain_text = block_settings.text | strip_newlines | strip_html | strip
-%}

<text-block-vue
  block-id="{{ block.id }}"
  section-id="{{ section.id }}"
  block-settings='{
    "text": {{ block_settings.text | json }},
    "type_preset": {{ block_settings.type_preset | json }},
    "width": {{ block_settings.width | json }},
    "alignment": {{ block_settings.alignment | json }},
    "background": {{ block_settings.background | json }},
    "background_color": {{ block_settings.background_color | json }},
    "corner_radius": {{ block_settings.corner_radius | json }}
  }'
  shopify-editor-block-id="{{ block.id }}"
  shopify-editor-section-id="{{ section.id }}"
  {{ block.shopify_attributes }}
>
  {% comment %}Vue 组件会在这里挂载{% endcomment %}
</text-block-vue>

{% comment %}加载 Vue 编译后的 JS{% endcomment %}
<script
  src="{{ 'vue/text-block.js' | asset_url }}"
  type="module"
></script>

{% stylesheet %}
  /* 可以在这里添加额外样式 */
{% endstylesheet %}